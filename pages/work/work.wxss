.selectBook{
    padding:30rpx 0 30rpx 30rpx;
}
.selectBookImg{
    width:184rpx;
    height:220rpx;
    margin-right:40rpx;
    vertical-align: middle;
}
.selectBookInfo{
    display:inline-block;
    width:470rpx;
    height:220rpx;
    padding-top:40rpx;
    box-sizing: border-box;
    vertical-align: middle;
}
.selectBookItem{
    margin-bottom: 20rpx;
}
.selectBookText{
    color:#333333;
    font-size: 30rpx;
    margin-right:30rpx;
    vertical-align: middle;
}
.downArrow{
    width:20rpx;
    height:12rpx;
    position: absolute;
    top:30rpx;
    right:20rpx;
}
.selectBookInput{
    position: relative;
    display:inline-block;
    width:280rpx;
    height:75rpx;
    padding-left:20rpx;
    font-size: 28rpx;
    color:#333;
    vertical-align: middle;
    background: #FAFAFA;
}
.shareTitle{
    color:#000000;
    font-size: 32rpx;
    width:100%;
    height:112rpx;
    line-height: 112rpx;
    padding-left:36rpx;
    background: #F5F5F5;
    font-weight: bolder;
}
.shareReading{
    padding:30rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}
.remark{
    box-sizing: border-box;
    padding:15rpx;
    width:690rpx;
    height:200rpx;
    border-radius: 4px;
    font-size: 28rpx;
    color: #CCCCCC;
}
.operation{
    margin:20rpx 0;
}
.operationImg{
    width: 80rpx;
    height:80rpx;
    margin-right: 30rpx;
}
.video>view{
    position: relative;
    padding:5rpx;
    background:#fff;
    border-radius:5rpx;
    border:1px solid #ddd;
}
audio{
    display:block;
}
.uploadImgCon{
    margin:20rpx 0;
}
.uploadImgItem{
    width: 120rpx;
    height:120rpx;
    position: relative;
    display:inline-block;
    margin-right: 20rpx;
}
.deleteImg{
    width: 26rpx;
    height:26rpx;
    position: absolute;
    top:0;
    right:0;
}
.uploadImg{
    width: 120rpx;
    height:120rpx;
    border-radius: 6rpx;
    
}
.locationCon{
    display:flex;
    align-items: center;
    justify-content: space-between;
}
.location{
    margin-left: 36rpx;
    padding:40rpx 0rpx;
}
.locationImg{
    width: 26rpx;
    height: 32rpx;
    margin-right: 20rpx;
}
.locationText{
    color:#275EA8;
    font-size: 28rpx;
}
.publishCon{
    margin-right: 36rpx;
}
.publishImg{
    width:40rpx;
    height:40rpx;
    display:inline-block;
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 20rpx;
    border:1px solid #ccc;
}
.publishText{
    font-size: 28rpx;
    color:#666666;
    vertical-align: middle;
}

.publish{
    width:680rpx;
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
    margin:0 auto;
    background: #275EA8;
    color:#fff;
    border-radius: 44rpx;
}