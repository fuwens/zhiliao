/* index */
.list_item {
    box-sizing: border-box;
    font-size: 32rpx;
    text-align: center;
    line-height: 120rpx;
    width: 33.3333%;
    float: left;
    color: #999;
}

.font {
    display: inline-block;
    width: 80%;
    line-height: 126rpx;
}

.top {
    width: 100%;
    padding: 20rpx;
    /* padding-top:85rpx; */
    box-sizing: border-box;
    overflow: hidden;
}

.img {
    width: 90rpx;
    height: 90rpx;
    position: relative;
    float: left;
}

.img>image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.img .sax {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    bottom: 0rpx;
    right: 5rpx;
}

.img .sax>image {
    width: 100%;
    height: 100%;
}

.name {
    float: left;
    padding-left: 25rpx;
}

.name>text {
    color: #6f8eb7;
    font-weight: 400;
}

.name>view {
    line-height: 24rpx;
}

.name>view>text {
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
}

.eclipse {
    float: right;
    width: 40rpx;
    height: 10rpx;
}

.eclipse>image {
    width: 100%;
    height: 100%;
}

.seal {
    width: 84rpx;
    height: 84rpx;
    float: right;
    margin-right: 30rpx;
}

.seal>image {
    width: 100%;
    height: 100%;
}

.text {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx 20rpx 30rpx;
    font-size: 30rpx;
    color: #262626;
    text-align: justify;
}

.text ::after {
    display: inline-block;
    content: "";
    padding-left: 100%;
}

.video {
    box-sizing: border-box;
    /* height:140rpx; */
    padding: 28rpx 44rpx;
    background: #f7f7f7;
}

.video>view {
    padding: 5rpx;
    background: #fff;
    border-radius: 5rpx;
    border: 1px solid #ddd;
}

audio {
    display: block;

}

.op {
    width: 100%;
    padding: 0 40rpx;
    background: #f7f7f7;
    overflow: hidden;
    box-sizing: border-box;
}

.op>.left {
    float: left;
    padding-top: 20rpx;
    padding-bottom: 24rpx;
    margin-right: 50rpx;
}

.op>.left>image {
    width: 30rpx;
    height: 34rpx;
    float: left;
    margin-right: 10rpx;
}

.op>.left>view {
    float: left;
    font-size: 26rpx;
    line-height: 30rpx;
    color: #666;
}

.op>.right {
    margin-top: 10rpx;
    box-sizing: border-box;
    width: 236rpx;
    line-height: 50rpx;
    border: 1px solid #e6e6e6;
    border-radius: 2px;
    text-align: center;
    font-size: 30rpx;
    float: right;
    color: #6f8eb7;
    background: #fff;
}

.comment-box {
    position: relative;
}

.c-header {
    height: 89rpx;
    line-height: 89rpx;
    border-bottom: 1rpx solid #F0F0F0;
}

.c-line {
    position: absolute;
    top: 31rpx;
    width: 8rpx;
    height: 26rpx;
    background: rgba(39, 94, 168, 1);
}

.count {
    padding-left: 23rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
}

.zan-count {
    float: right;
    margin-right: 28rpx;
    font-size: 30rpx;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
}

.reader {
    position: relative;
    padding: 22rpx 0rpx 0rpx 23rpx;
    overflow: hidden;
}

.reader-user {
    position: absolute;
    width: 58rpx;
    height: 58rpx;
    border-radius: 50%;
}
.reader-content{
    float: right;
    width: 643rpx;
    padding-right: 28rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #F0F0F0;
}
.read-nick{
    font-size:26rpx;
    color:rgba(102,102,102,1);
}
.read-comment{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(26,26,26,1);
    margin-bottom: 20rpx;
    margin-top: 25rpx;
}
.read-time{
    font-size:24rpx;
    color:rgba(177,177,177,1);
}
.read-zan{
    float: right;
    margin-top: 20rpx;
    width:30rpx;
    height:28rpx;
}