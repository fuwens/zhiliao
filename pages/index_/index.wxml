<view class="box">
  <view class="banner">
    <image style="width: 100%;" mode="widthFix" src='../../Img/Banner_.png'></image>

    <view class="title">
      <view wx:for="{{list}}" wx:key="index" class="list_item" data-index="{{index}}" bindtap="tab">
