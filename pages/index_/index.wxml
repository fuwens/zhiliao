              <view class='txt-color'>， 小李</view>
              <view class="publice">
                <text>共有40个人觉得很赞</text>
                <image src="../../Img/arrows.png"></image>
              </view>
            </view>
            <view class="sth">
                <view>
                  <view>一剪梅：</view>
                  <text>说的不错</text>
                </view>
              </view>
          </view>
        </view>
      </view>
      <view style="display:{{activeIndex !== 1 ? 'none' : 'block'}}">1</view>
      <view style="display:{{activeIndex !== 2 ? 'none' : 'block'}}">2</view>
  </view>
