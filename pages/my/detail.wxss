.header{
    height: 480rpx;
    background: linear-gradient(to bottom, #275ea8 0%,#ffffff 10%);
    z-index: -1;
}
.top-bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 390rpx;
    z-index: 0;
}
.my-box{
    position: relative;
    text-align: center;
}
.my-icon{
    width:115rpx;
    height:115rpx;
    margin-top: 25rpx;
    border-radius:50%;
}
.my-detail{
    height: 45rpx;
    line-height: 45rpx;
}
.address-icon{
    width:20rpx;
    height:26rpx;
    box-shadow:0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.18);
    background-color: red;
    vertical-align: middle;
}
.school-icon{
    width:28rpx;
    height:20rpx;
    box-shadow:0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.18);
    background-color: red;
    vertical-align: middle;
}
.address{
    font-size:26rpx;
    color:rgba(255,255,255,1);
    line-height:40rpx;
    text-shadow:0rpx 0rpx 10rpx rgba(0, 0, 0, 0.18);
}
.options{
    margin-top: 12rpx;
    display: flex;
    justify-content: space-around;
}
.opt-item{
    width:140rpx;
    height:52rpx;
    line-height: 52rpx;
    background:rgba(255,255,255,0.1);
    border:1rpx solid rgba(224, 224, 224, 0.3);
    border-radius:12rpx;
    font-size:26rpx;
    color:rgba(255,255,255,1);
}
.opt-item text{
    margin-left: 15rpx;
}
.option-care{
    width: 20rpx;
    height: 20rpx;
}
.option-add{
    width: 23rpx;
    height: 24rpx;
}

.option-del{
    width: 26rpx;
    height: 24rpx;
    vertical-align: -2rpx;
}
.option-more{
    width: 39rpx;
    height: 16rpx;
}
.fans-box{
    position: absolute;
    width:710rpx;
    height:139rpx;
    box-sizing: border-box;
    padding-top: 26rpx;
    left: 20rpx;
    margin-top: 20rpx;
    background:rgba(255,255,255,1);
    box-shadow:0rpx 0rpx 19rpx 0rpx rgba(0, 0, 0, 0.15);
    border-radius:14rpx;
    text-align: center;
}
.v-line{
    position: absolute;
    width:2rpx;
    height:30rpx;
    background:rgba(217,217,217,1);
    border-radius:1rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.fans-box .left{
    float: left;
    width: 49%;
}
.fans-box .right{
    float: right;
    width: 49%;
}
.funs-num{
    font-size:36rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
}
.funs-title{
    font-size:24rpx;
    font-weight:bold;
    color:rgba(153,153,153,1);
}
.other-books{
    margin-top: 30rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.label-box{
    position: relative;
    margin-bottom: 25rpx;
}
.left-arrow{
    width: 12rpx;
    height: 23rpx;
}
.more{
    position: absolute;
    right: 5rpx;
    top: 13rpx;
    font-size:26rpx;
    font-weight:bold;
    color:rgba(128,128,128,1);
}
.label{
    font-size:36rpx;
    font-weight:bold;
    color:rgba(26,26,26,1);
}
.books-box{
    display: flex;
    height: 225rpx;
    justify-content: space-around;
    align-self: center;
}
.book-item{
    height: 224rpx;
    flex: 0 0 25%;
}
.record{
    margin: 60rpx 0 0 20rpx;
    font-size:36rpx;
    font-weight:bold;
    color:rgba(26,26,26,1);
}


/* index */
.list_item {
    box-sizing: border-box;
    font-size: 32rpx;
    text-align: center;
    line-height: 120rpx;
    width:33.3333%;
    float:left;
    color:#999;
  }
  .font{
    display:inline-block;
    width:80%;
    line-height:126rpx;
  }
  .top{
    width:100%;
    padding:20rpx;
    /* padding-top:85rpx; */
    box-sizing: border-box;
    overflow:hidden;
  }
  .img{
    width:90rpx;
    height:90rpx;
    position:relative;
    float:left;
  }
  .img > image{
    width:100%;
    height:100%;
    border-radius:50%;
  }
  .img .sax{
    width:38rpx;
    height:38rpx;
    position:absolute;
    bottom:0rpx;
    right:5rpx;
  }
  .img .sax > image{
    width:100%;
    height:100%;
  }
  .name{
    float:left;
    padding-left:25rpx;
  }
  .name > text{
    color:#6f8eb7;
    font-weight:400;
  }
  .name > view{
    line-height:24rpx;
  }
  .name > view >text{
    font-size:24rpx;
    color:#999;
    line-height:24rpx;
  }
  .eclipse{
    float:right;
    width:40rpx;
    height:10rpx;
  }
  .eclipse > image{
    width:100%;
    height:100%;
  }
  .seal{
    width:84rpx;
    height:84rpx;
    float:right;
    margin-right:30rpx;
  }
  .seal > image{
    width:100%;
    height:100%;
  }
  .text{
    width:100%;
    box-sizing:border-box;
    padding:0 30rpx 20rpx 30rpx;
    font-size:30rpx;
    color:#262626;
    text-align: justify;
  }
  .text ::after{
    display: inline-block;
    content: "";
    padding-left: 100%;
  }
  .video{
    box-sizing: border-box;
    /* height:140rpx; */
    padding:28rpx 44rpx;
    background:#f7f7f7;
  }
  .video>view{
    padding:5rpx;
    background:#fff;
    border-radius:5rpx;
    border:1px solid #ddd;
  }
  audio{
    display:block;
  
  }
  .op{
    width:100%;
    padding:0 40rpx;
    background:#f7f7f7;
    overflow:hidden;
    box-sizing:border-box;
  }
  .op > .left{
    float:left;
    padding-top:20rpx;
    padding-bottom:24rpx;
    margin-right:50rpx;
  }
  .op > .left > image{
    width:30rpx;
    height:34rpx;
    float:left;
    margin-right:10rpx;
  }
  .op > .left > view{
    float:left;
    font-size:26rpx;
    line-height:30rpx;
    color:#666;
  }
  .op > .right{
    margin-top:10rpx;
    box-sizing: border-box;
    width:236rpx;
    line-height:50rpx;
    border:1px solid #e6e6e6;
    border-radius:2px;
    text-align:center;
    font-size:30rpx;
    float:right;
    color:#6f8eb7;
    background:#fff;
  }
  .zan{
    box-sizing: border-box;
    margin:20rpx 30rpx;
    padding:20rpx;
    border:2px solid #a9caf7;
    border-radius: 6rpx;
    background:#f7f7f7;
    overflow:hidden;
  }
  .zan>view{
    width:100%;
    box-sizing: border-box;
    overflow:hidden;
  }
  .zan>view>.manImage{
    width:102rpx;
    height:102rpx;
    border-radius:50%;
    float:left;
    padding:4rpx;
    box-sizing:border-box;
    border:1px solid #275ea8;
  }
  .zan>view>.mantext{
    float:left;
    padding-left:20rpx;
  }
  .zan>view>.mantext>text{
    font-size:30rpx;
    color:#6785ae;
    font-weight: bold;
  }
  .zan>view>.mantext>view{
    color:#a9a9a9;
    font-size:24rpx;
  }
  .zan>view>.manImage>image{
    width:90rpx;
    height:90rpx;
    border-radius: 50%;
  }
  .zan>view>image>view{
    font-size:30rpx;
    color:#6785ae;
  }
  .zan > text{
    width:100%;
    color:#444;
    font-size:30rpx;
    font-weight:bold;
  }
  .detail{
    width:100%;
    overflow:hidden;
    padding:34rpx;
    box-sizing: border-box;
    background:#f7f7f7;
  }
  .detail>view{
    width:100%;
    background:#fff;
    border-radius:3rpx;
    overflow:hidden;
    padding:20rpx;
    box-sizing: border-box;
  }
  .detail >view>image{
    width:30rpx;height:28rpx;
    float:left;
    margin-top:5rpx;
    margin-right:10rpx;
  }
  .detail>view>.txt-color{
    color:#6f8eb7;
    font-size:26rpx;
    font-weight:bold;
    float:left;
  }
  .detail>view>.publice{
    width:100%;
    box-sizing: border-box;
    overflow:hidden;
  }
  .detail>view>.publice text{
    font-size:26rpx;
    font-weight: bold;
    line-height:60rpx;
    float:left;
  }
  .detail>view>.publice>image{
    width:13rpx;
    height:22rpx;
    float:left;
    padding-top:18rpx;
    padding-left:10rpx;
  }
  .detail>.sth{
    width:100%;
    border-top:1px solid #ebebeb;
  }
  .detail>.sth>view{
    width:100%;
    overflow:hidden;
  }
  .detail>.sth>view>view{
    float:left;
    color:#6f8eb7;
    font-weight:bold;
    font-size:26rpx;
  }
  .detail>.sth>view>text{
    float:left;
    font-size:26rpx;
  }
  .kongbai{
    position: absolute;
    height:10rpx;
    bottom:0;
    width:100%;
    background:#fff;
  }
