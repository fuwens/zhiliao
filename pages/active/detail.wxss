/* pages/active/detail.wxss */
.activeBanner{
    position: relative;
}
.activeImg{
    width:750rpx;
    height:310rpx;
}
.shareCon{
    width:120rpx;
    height:60rpx;
    padding-left:20rpx;
    box-sizing: border-box;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    line-height: 60rpx;
    color:#999999;
    background: #000;
    position: absolute;
    top:20rpx;
    right:0;
}
.shareIcon{
    width:30rpx;
    height:30rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.shareText{
    font-size: 28rpx;
    vertical-align: middle;
}

.intro{
    border-bottom:10rpx solid #F5F5F5;
    padding:30rpx 0;
}
.introInfo{
    width:700rpx;
    height:150rpx;
    margin:20rpx auto;
    position: relative;
    padding-top:35rpx;
    box-sizing: border-box;
    text-align: center;
}
.activebg{
    width:700rpx;
    height:150rpx;
    position: absolute;
    top:0;
    left:0;
    z-index:-1;
}
.introTitle{
    font-size: 36rpx;
    color:#000000;
    width:100%;
    text-align: center;
}
.introInfoTextCon{
    display:inline-block;
    width:600rpx;
    height:100rpx;
    text-align: left;
}
.introInfoText{
    display: inline-block;
    color:#999999;
    margin-top:10rpx;
    font-size: 26rpx;
}
