.page{

}
.box-bg{
    height:260rpx;
    background:rgba(39,94,168,1);
    text-align: center;
    box-sizing: border-box;
}
.adver{
    margin-top: 25rpx;
    width:122rpx;
    height:122rpx;
    border-radius:50%;
}
.name{
    font-size:34rpx;
    font-weight:bold;
    color:rgba(255,255,255,1);
}
.rank-box{
    background-color: white;
    margin-top: -10rpx;
    border-radius:14rpx;
    overflow: hidden;
}
.head{
    height:119rpx;
    background:rgba(255,255,255,1);
    box-shadow:0rpx 0rpx 19rpx 0rpx rgba(0, 0, 0, 0.15);
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.item{
    width: 25%;
    box-sizing: border-box;
    border-right: 1rpx solid rgba(224,224,224,1);
    text-align: center;
    font-size:32rpx;
    line-height: 33rpx;
    height: 30rpx;
    font-weight:500;
    color:rgba(153,153,153,1);
}
.item:last-child{
    border-right: none;
}
.item text{
    position: relative;
}
.content{
    margin-top: 27rpx;
    padding: 0 20rpx;
}
.me{
    height:89rpx;
    line-height: 89rpx;
    background:rgba(247,247,247,1);
    border-radius:14rpx;
    padding: 0 28rpx 0;
}
.me .left{
    float: left;
    font-size:40rpx;
    font-weight:800;
    font-style:italic;
    color:rgba(51,51,51,1);
}
.me .center{
    display: inline;
    font-size:30rpx;
    font-weight:bold;
    margin-left: 140rpx;
    color:rgba(102,102,102,1);
}
.me .right{
    float: right;
    font-size:30rpx;
    font-weight:bold;
    color:rgba(39,94,168,1);
}
.active{
    color: #275EA8;
}
.active::after{
    content: "";
    position: absolute;
    left: 0;
    bottom: -35rpx;
    width: 100%;
    border-bottom: 2px solid #275EA8;
}
.line{
    height: 157rpx;
    padding: 0 30rpx 0 28rpx;
    line-height: 157rpx;
    border-bottom: 1rpx solid rgba(240,240,240,1);
}
.line .left{
    float: left;
    font-size:40rpx;
    font-weight:800;
    font-style:italic;
    color:rgba(51,51,51,1);
}
.line .center{
    display: inline;
    /* height: 157rpx; */
    /* line-height: 157rpx; */
    margin-left: 20rpx;
    /* margin-right: 55rpx; */
}
.line .right{
    float: right;
    font-size:30rpx;
    font-weight:bold;
    color:rgba(39,94,168,1);
}
.rank-icon{
    width: 37rpx;
    height: 46rpx;
    vertical-align: middle;
}
.user{
    width:100rpx;
    height:100rpx;
    border-radius:50rpx;
    vertical-align: middle;
}
.mgl{
    margin-left: 13rpx;
}
.user-name{
    margin-left: 30rpx;
    font-size:34rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
}