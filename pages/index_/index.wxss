.box{
  width:100%;position:relative;
}
.banner{
  width:100%;
  height:350rpx;
  padding-bottom:20rpx;
  position:relative;
}
.title{
  width:90%;
  height:130rpx;
  background:#fff;
  position:absolute;
  left:5%;
  bottom:-55rpx;
  border-radius:10rpx;
  box-shadow: 2rpx 6rpx 10rpx 6rpx #ededed;
}
.on {
    border-bottom: 5rpx solid #275ea8;
    color: #275ea8;
  }
.list_item {
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  line-height: 120rpx;
  width:33.3333%;
  float:left;
  color:#999;
}
.font{
  display:inline-block;
  width:80%;
  line-height:126rpx;
}
.top{
  width:100%;
  padding:20rpx;
  padding-top:85rpx;
  box-sizing: border-box;
  overflow:hidden;
}
.img{
  width:90rpx;
  height:90rpx;
  position:relative;
  float:left;
}
.img > image{
  width:100%;
  height:100%;
  border-radius:50%;
}
.img .sax{
  width:38rpx;
  height:38rpx;
  position:absolute;
  bottom:0rpx;
  right:5rpx;
}
.img .sax > image{
  width:100%;
  height:100%;
}
.name{
  float:left;
  padding-left:25rpx;
}
.name > text{
  color:#6f8eb7;
  font-weight:400;
}
.name > view{
  line-height:24rpx;
}
.name > view >text{
  font-size:24rpx;
  color:#999;
  line-height:24rpx;
}
.eclipse{
  float:right;
  width:40rpx;
  height:10rpx;
}
.eclipse > image{
  width:100%;
  height:100%;
}
.seal{
  width:84rpx;
  height:84rpx;
  float:right;
  margin-right:30rpx;
}
.seal > image{
  width:100%;
  height:100%;
}
.text{
  width:100%;
  box-sizing:border-box;
  padding:0 30rpx 20rpx 30rpx;
  font-size:30rpx;
  color:#262626;
  line-height: 45rpx;
  text-align: justify;
  height:130rpx;
}
.show{
  height:auto;
}
.noshow{
  overflow: hidden;
  text-overflow: ellipsis;
}
.moreText{
  color:#627FA6;
  font-size: 30rpx;
  box-sizing: border-box;
  padding:10rpx 30rpx 30rpx 30rpx;
}
.moreTextDeatil{
 margin-right: 20rpx;
}
.text ::after{
  display: inline-block;
  content: "";
  padding-left: 100%;
}
.video{
  box-sizing: border-box;
  /* height:140rpx; */
  padding:28rpx 44rpx;
  background:#f7f7f7;
}
.video>view{
  padding:5rpx;
  background:#fff;
  border-radius:5rpx;
  border:1px solid #ddd;
}
audio{
  display:block;

}
.op{
  width:100%;
  padding:0 40rpx;
  background:#f7f7f7;
  overflow:hidden;
  box-sizing:border-box;
}
.op > .left{
  float:left;
  padding-top:20rpx;
  padding-bottom:24rpx;
  margin-right:50rpx;
}
.op > .left > image{
  width:30rpx;
  height:34rpx;
  float:left;
  margin-right:10rpx;
}
.op > .left > view{
  float:left;
  font-size:26rpx;
  line-height:30rpx;
  color:#666;
}
.op > .right{
  margin-top:10rpx;
  box-sizing: border-box;
  width:236rpx;
  line-height:50rpx;
  border:1px solid #e6e6e6;
  border-radius:2px;
  text-align:center;
  font-size:30rpx;
  float:right;
  color:#6f8eb7;
  background:#fff;
}
.zan{
  box-sizing: border-box;
  margin:20rpx 30rpx;
  padding:20rpx;
  border:2px solid #a9caf7;
  border-radius: 6rpx;
  background:#f7f7f7;
  overflow:hidden;
}
.zan>view{
  width:100%;
  box-sizing: border-box;
  overflow:hidden;
}
.zan>view>.manImage{
  width:102rpx;
  height:102rpx;
  border-radius:50%;
  float:left;
  padding:4rpx;
  box-sizing:border-box;
  border:1px solid #275ea8;
}
.zan>view>.mantext{
  float:left;
  padding-left:20rpx;
}
.zan>view>.mantext>text{
  font-size:30rpx;
  color:#6785ae;
  font-weight: bold;
}
.zan>view>.mantext>view{
  color:#a9a9a9;
  font-size:24rpx;
}
.zan>view>.manImage>image{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
}
.zan>view>image>view{
  font-size:30rpx;
  color:#6785ae;
}
.zan > text{
  width:100%;
  color:#444;
  font-size:30rpx;
  font-weight:bold;
}
.detail{
  width:100%;
  overflow:hidden;
  padding:34rpx;
  box-sizing: border-box;
  background:#f7f7f7;
}
.detail>view{
  width:100%;
  background:#fff;
  border-radius:3rpx;
  overflow:hidden;
  padding:20rpx;
  box-sizing: border-box;
}
.detail >view>image{
  width:30rpx;height:28rpx;
  float:left;
  margin-top:5rpx;
  margin-right:10rpx;
}
.detail>view>.txt-color{
  color:#6f8eb7;
  font-size:26rpx;
  font-weight:bold;
  float:left;
}
.detail>view>.publice{
  width:100%;
  box-sizing: border-box;
  overflow:hidden;
}
.detail>view>.publice text{
  font-size:26rpx;
  font-weight: bold;
  line-height:60rpx;
  float:left;
}
.detail>view>.publice>image{
  width:13rpx;
  height:22rpx;
  float:left;
  padding-top:18rpx;
  padding-left:10rpx;
}
.detail>.sth{
  width:100%;
  border-top:1px solid #ebebeb;
}
.detail>.sth>view{
  width:100%;
  overflow:hidden;
}
.detail>.sth>view>view{
  float:left;
  color:#6f8eb7;
  font-weight:bold;
  font-size:26rpx;
}
.detail>.sth>view>text{
  float:left;
  font-size:26rpx;
}
