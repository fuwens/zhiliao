.bookContainerOuter{
  background: #F7F7F7;
  height:100vh;
}
.bookContainer{
  background: #F7F7F7;
}
.topImg{
  width:750rpx;
  height:350rpx;
}
.tabCon{
  height:60rpx;
  width:710rpx;
  position: relative;
  margin:0 auto;
}
.tabList{
  position: absolute;
  top:-60rpx;
  width:710rpx;
  height:120rpx;
  background: #fff;
  border-radius:14rpx;
  display:flex;
  justify-content: space-evenly;
}
.tabItem{
  display:inline-block;
  text-align: center;
  height:120rpx;
  line-height: 120rpx;
  font-size:32rpx;
  position: relative;
  color:#999999;
  border-bottom:4rpx solid #fff;
} 
.activeColor{
  color:#275EA8;
  border-bottom:4rpx solid #275EA8;
}



.bookCon{
  width:710rpx;
  margin:0 auto;
  margin-top:20rpx;
  border-radius: 14rpx;
  padding:20rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.bookImg{
  width:194rpx;
  height:260rpx;
  vertical-align: middle;
}
.rankCon{
  display:inline-block;
  margin-left: 40rpx;
  vertical-align: middle;
  width:370rpx;
  height:200rpx;
}
.rankIcon{
  width: 38rpx;
  height:46rpx;
  vertical-align: middle;
}
.rank{
  margin-left: 20rpx;
  font-size: 38rpx;
}
.firstRank{
  color:#FFA96F
}
.secondRank{
  color:#D98750
}
.rankIntro{
  margin-top: 40rpx;
  color:#999999;
  font-size: 26rpx;
}
.bookInfo{

}
.bookName{
  font-size: 36rpx;
  color:#333333;
  margin-top: 20rpx;
}
.bookDetail{
  margin:20rpx 0 ;
}
.bookAuth{
  font-size: 26rpx;
  color:#808080;
  margin-right:60rpx;
}
.bookFactory{
  font-size: 26rpx;
  color:#808080;
}
.bookIntro{
  font-size: 28rpx;
  color:#333333;
}

.recommendCon{
  width:710rpx;
  margin:0 auto;
  overflow: hidden;
  /* border:1px solid gray; */
}
.recommendBook{
  width:344rpx;
  height:210rpx;
  border-radius: 14rpx;
  background: #fff;
  margin-top:20rpx;
  padding:15rpx;
  box-sizing: border-box;
  float: left;
  background: #fff;
  display: inline-block;
  position: relative;
}
.recommendBookTr{
  margin-right: 20rpx;
}
.recommendImg{
  width:136rpx;
  height: 182rpx;
}
.recommendIntro{
  position: absolute;
  height: 160rpx;
  width:140rpx;
  margin:30rpx;
  top:0;
  right:0;
}
.recommendName{
  color:#333333;
  font-size: 28rpx;
}
.recommendHeartCon{
  position: absolute;
  bottom:0;
}
.recommendHeartImg{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}
.recommendText{
  color:#999999;
  font-size: 28rpx;
  vertical-align: middle;
}

.dreamCon{
  background: #fff;
  width: 710rpx;
  margin:0 auto;
  margin-top:20rpx;
  border-radius: 14rpx;
  overflow: hidden;
}
.dreamItem{
  width:195rpx;
  float:left;
  text-align: center;
  margin:20rpx;
  /* border:1px solid gray; */
}
.dreamImg{
  width:142rpx;
  height:190rpx;
}
.dreamName{
  color:#333333;
  font-size: 28rpx;
}