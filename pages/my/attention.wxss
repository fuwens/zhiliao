page{
    background-color: #EDEDED;
}
.tab{
    background-color: white;
    height: 100rpx;
    box-shadow:0rpx 1rpx 7rpx 0rpx rgba(0, 0, 0, 0.06);
    display: flex; 
    text-align: center;
    align-items: center;
    margin-bottom: 20rpx;
}
.item{
    position: relative;
    flex: 1;
    font-size:28rpx;
    color:rgba(128,128,128,1);
}
.item.active{
    color: #275EA8;
}
.active::after{
    content: '';
    position: absolute;
    width:32rpx;
    height:4rpx;
    background:rgba(39,94,168,1);
    border-radius:2rpx;
    bottom: -30rpx;
    left: 50%;
    transform: translateX(-50%);
}
.user-box{
    width:710rpx;
    margin: 0 auto;
    background:rgba(255,255,255,1);
    border-radius:14rpx;
    overflow: hidden;
}
.user{
    height:130rpx;
    line-height: 130rpx;
    /* border-radius:14rpx; */
    box-sizing: border-box;
    padding-left: 26rpx;
}
.user-icon{
    width:90rpx;
    height:90rpx;
    border-radius:50%;
    vertical-align: middle;
}
.nick{
    font-size:32rpx;
    font-weight:bold;
    color:rgba(33,33,33,1);
    margin-left: 33rpx;
}
.status{
    float: right;
    margin-right: 30rpx;
}
.status.text{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(179,179,179,1);
}
.user+.user{
    border-top: 1rpx solid rgba(237,237,237,1);
}
.status.del{
    margin-top: 30rpx;
    padding: 0 30rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    background:rgba(255,255,255,1);
    border:1rpx solid rgba(242, 80, 80, 1);
    border-radius:35rpx;
    box-sizing: border-box;
    font-size:30rpx;
    font-weight:500;
    color:rgba(241,79,79,1);
}
.status.cancel{
    margin-top: 30rpx;
    padding: 0 30rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    border:1rpx solid #6FA0E2;
    border-radius:35rpx;
    box-sizing: border-box;
    font-size:30rpx;
    font-weight:500;
    color:#6FA0E2;
}
.status.followed{
    margin-top: 30rpx;
    padding: 0 30rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    border:1rpx solid #CCCCCC;
    border-radius:35rpx;
    box-sizing: border-box;
    font-size:30rpx;
    font-weight:500;
    color:#999999;
}