    color:#fff;
    font-size: 32rpx;
}
.autherImgCon{
    width:100%;
    text-align: center;
}
.autherImg{
    width:180rpx;
    height:180rpx;
    border-radius: 50%;
}
.autherName{
    color:#000000;
    font-size: 36rpx;
